<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/namestade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="79dp"
            android:text="Partager"
            android:textColor="#ffffff"

            android:textSize="20dp"
            android:layout_marginLeft="72dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/refresh2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:src="@drawable/refresh"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:id="@+id/back10"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrowl"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/titlee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="29dp"
            android:hint="Titre" />

        <EditText
            android:id="@+id/publicationn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
android:layout_below="@+id/titlee"
            android:layout_marginTop="15dp"
            android:hint="Editer quelque chose..."
            tools:ignore="RtlCompat" />


        <Button
            android:id="@+id/validd"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_below="@+id/img"
            android:background="#4caf50"
            android:text="partager"
            android:textColor="#ffffff"
            tools:ignore="RtlCompat"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="152dp"
            android:visibility="invisible"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/addph"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/publicationn"
            android:background="@drawable/sign_in_button_background"
            android:drawableLeft="@drawable/image1"
            android:text="photo"
            android:textColor="#4caf50"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</LinearLayout>